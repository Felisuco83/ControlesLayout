<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlesLayout.TipoAlerta">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Tipos Alerta Xamarin" FontSize="40"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="botonsimple" Text="Alerta simple" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="botonokcancel" Text="Ok/Cancel" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="botonopciones" Text="Alerta opciones" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="botonmodal" Text="Alerta modal" HorizontalOptions="FillAndExpand"/>
            <Label x:Name="lblrespuesta" FontSize="40" TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>